<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junior.juniormatatuapplication.Comments"
    android:background="@drawable/hotdollar">


    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="154dp"
        android:ems="10"
        android:hint="Enter The Sacco Number Here"
        android:inputType="textPersonName"
        android:textColor="#096e1f"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="53dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Compose"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="The Sacco Number is 0704221030"
        android:textColor="#096e1f"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout >
